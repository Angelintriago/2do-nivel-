from abc import ABC, abstractmethod

class Forma(ABC):
    @abstractmethod
    def area(self):
        pass

class Circulo(Forma):
    def __init__(self, radio):
        self.radio = radio
    
    def area(self):
        return 3.1416 * self.radio ** 2

class Rectangulo(Forma):
    def __init__(self, ancho, alto):
        self.ancho = ancho
        self.alto = alto
    
    def area(self):
        return self.ancho * self.alto

# Uso
circulo = Circulo(5)
print(f"Área del círculo: {circulo.area()}")  # Salida: Área del círculo: 78.54

rectangulo = Rectangulo(4, 6)
print(f"Área del rectángulo: {rectangulo.area()}")  # Salida: Área del rectángulo: 24
