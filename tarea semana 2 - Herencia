class Animal:
    def __init__(self, nombre):
        self.nombre = nombre
    
    def moverse(self):
        print(f"{self.nombre} se mueve.")

class Perro(Animal):
    def __init__(self, nombre, raza):
        super().__init__(nombre)
        self.raza = raza
    
    def ladrar(self):
        print(f"{self.nombre} ladra: ¡Guau!")

class Gato(Animal):
    def __init__(self, nombre, color):
        super().__init__(nombre)
        self.color = color
    
    def maullar(self):
        print(f"{self.nombre} maulla: ¡Miau!")

# Uso
perro = Perro("Firulais", "Labrador")
perro.moverse()  # Salida: Firulais se mueve.
perro.ladrar()   # Salida: Firulais ladra: ¡Guau!

gato = Gato("Mishi", "Gris")
gato.moverse()   # Salida: Mishi se mueve.
gato.maullar()   # Salida: Mishi maulla: ¡Miau!
