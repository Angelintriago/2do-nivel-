class Animal:
    def __init__(self, nombre):
        self.nombre = nombre
    
    def hacer_sonido(self):
        print(f"{self.nombre} hace un sonido genérico.")

class Perro(Animal):
    def hacer_sonido(self):
        print(f"{self.nombre} ladra: ¡Guau!")

class Gato(Animal):
    def hacer_sonido(self):
        print(f"{self.nombre} maulla: ¡Miau!")

# Uso en una lista polimórfica
animales = [Perro("Firulais"), Gato("Mishi"), Animal("Genérico")]

for animal in animales:
    animal.hacer_sonido()
# Salida:
# Firulais ladra: ¡Guau!
# Mishi maulla: ¡Miau!
# Genérico hace un sonido genérico.
